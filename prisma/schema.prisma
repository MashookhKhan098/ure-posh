generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Post {
  id            String   @id @default(cuid())
  title         String
  content       String
  author        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  featuredImage String?
  category      String
  tags          String
  status        String   @default("DRAFT")
  slug          String   @unique
}
